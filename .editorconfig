# EditorConfig  http://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Css
[*.css]
indent_size=2

# GraphQL
[*.graphql]
indent_size=2

# HTML
[*.html]
indent_size=2

# JavaScript
[*.{js,jsx}]
indent_size=2

# Scss
[*.scss]
indent_size=2

# Yaml
[*.{yaml,yml}]
indent_size=2
